---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout>
  <style is:global>
    h2 {
      font-size: 1.25rem;
      padding-block: 1rem;
    }
    ul {
      list-style-type: disc;
      padding-left: 2rem;
    }

    ol {
      list-style-type: decimal;
      padding-left: 2rem;
    }
  </style>
  <h1 class="text-xl sm:text-3xl">{frontmatter.title}</h1>
  <p class="text-xs text-accent dark:text-d-accent">
    Recieved from: {frontmatter.author}
  </p>
  <slot />
</BaseLayout>
